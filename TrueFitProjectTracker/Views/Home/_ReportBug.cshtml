@model TrueFitProjectTracker.ViewModels.BugViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="jumbotron" id="start">
    <nav class="main-breadcrumb">
        <ul>
            <li>
                <a class="logo" href="@Url.Action("ProjectsList", "Home", null)"></a>
            </li>
        </ul>
    </nav>

    <div class="col-md-3"></div>
</section>

@section styles{
       @Styles.Render("~/Content/Bug.css")
}

<section class="container">
    <form class="form-horizontal" role="form">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="inputBugName" class="col-md-2 control-label" style="text-align: left" style="">Bug Name</label>
                    <div class="col-sm-8">
                        <input type="Bug Name" class="form-control" id="inputBugName" placeholder="Bug name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputBugDesc" class="col-sm-2 control-label" style="text-align: left">Bug Description </label>
                    <div class="col-sm-8">
                        <textarea class="form-control" rows="5" placeholder="Bug description"></textarea>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="InputFile">File input</label>
                    <input type="file" id="InputFile">
                </div>
                <div class="form-group">
                    <div class="col-sm-1">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
